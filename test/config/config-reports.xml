<phpunit
  bootstrap="../src/bootstrap.php"
  strict="true"
  forceCoversAnnotation="true"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
  verbose="true"
>
  <testsuites>
    <testsuite>
      <directory>../suite</directory>
    </testsuite>
  </testsuites>

  <logging>
    <log
      type="coverage-clover"
      target="../report/coverage.xml"
    />
    
    <log
      type="coverage-html"
      target="../report/coverage"
      charset="UTF-8"
      yui="true"
      highlight="true"
    />

    <!--<log
      type="json"
      target="../report/logfile.json"
    />-->

    <log
      type="tap"
      target="../report/logfile.tap"
    />

    <log
      type="junit"
      target="../report/logfile.xml"
      logIncompleteSkipped="false"
    />

    <log
      type="testdox-html"
      target="../report/testdox.html"
    />

    <log
      type="testdox-text"
      target="../report/testdox.txt"
    />
  </logging>
  
  <filter>
    <whitelist>
      <directory>../../src</directory>
    </whitelist>
  </filter>
</phpunit>
